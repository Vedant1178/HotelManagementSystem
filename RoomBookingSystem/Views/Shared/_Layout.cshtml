<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Akhil's Hotel Room Booking System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/lib/jquery/dist/jquery.js" type="text/javascript"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js" type="text/javascript"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js" type="text/javascript"></script>
</head>
<body>
    <header>
        @if (User.Identity.IsAuthenticated)
        {
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container">
                    <a class="navbar-brand" asp-area="" asp-controller="Rooms" asp-action="Index"><img src="~/images/Team12.jpg" class="logo" style="width: 170px;
                                                                                                                                                    margin-top: -25px;
                                                                                                                                                    margin-bottom: -12px;
                                                                                                                                                    height: 110px;"> </a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/Rooms/Index"><img src="~/images/searchicon.png" style="width:27px" /> Search Rooms</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/Rooms/Index"><img src="~/images/news-2389226_1280.webp" style="width:30px" /> My Bookings</a>
                            </li>
                        </ul>

                    </div>
                    <div class="navbar-collapse collapse pull-right d-sm-inline-flex flex-sm-row-reverse">
                        <ul class="navbar-nav">
                            <li class="nav-item dropdown pull-right">
                                <a href="#" class="nav-link text-dark dropdown-toggle" data-toggle="dropdown">Welcome, @User.Identity.Name <b class="caret"></b></a>
                                <ul class="dropdown-menu text-center">
                                    <li><img src="~/images/LoginIcon.png" style="width:30px;" /> <a href="/Account/Logout">Logout</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        }
    </header>
    <div class="container">
        <partial name="_CookieConsentPartial" />
        <main>
            @RenderBody()
        </main>
    </div>
    @if (User.Identity.IsAuthenticated)
    {
        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2021 - Akhil's Hotel Room Booking System
            </div>
        </footer>
    }

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
